<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <RelativeLayout
        style="@style/fill_wrap"
        android:layout_marginTop="@dimen/dimen_10_dip"
    	android:layout_marginLeft="@dimen/dimen_5_dip"
    	android:layout_marginRight="@dimen/dimen_5_dip"
        >
        <ImageView
	        android:layout_width="@dimen/dimen_2_dip"
	        android:layout_height="@dimen/dimen_10_dip"
	        android:src="@drawable/movie_gree_line" 
	        android:layout_alignParentLeft="true"
	        android:id="@+id/movie_gree_line_iv"
	        android:layout_centerVertical="true"
	        />
    	<TextView
	        android:layout_toRightOf="@+id/movie_gree_line_iv"
	        style="@style/wrap_wrap"
	        android:textSize="17sp"
	        android:id="@+id/video_category_name_tv"
	        android:layout_marginLeft="@dimen/dimen_5_dip"
	        android:textColor="@color/movie_title_color"
	        />
    </RelativeLayout>
    <com.zhephone.hotspot.app.widget.MyGridView
        android:id="@+id/video_list_gv"
	    android:layout_marginTop="@dimen/dimen_5_dip"
	    android:layout_marginLeft="@dimen/dimen_6_dip"
	    android:layout_marginRight="@dimen/dimen_6_dip"
	    style="@style/wrap_wrap"
	    android:cacheColorHint="@color/transparent"
	    android:numColumns="2"
	    android:fadingEdge="none"
	    android:horizontalSpacing="@dimen/dimen_7_dip"
	    android:verticalSpacing="@dimen/dimen_12_dip"
	    android:divider="@color/transparent"
	    android:dividerHeight="0dp"
	    android:listSelector="@color/transparent"
	    android:scrollbars="none"
	    />
</LinearLayout>
