<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:padding="@dimen/dimen_6_dip" >
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:id="@+id/chat_item_right_ll"
	    android:orientation="vertical"
		android:layout_height="wrap_content"  >
		<RelativeLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    >
		    <TextView
			    android:id="@+id/tv_sendtime_right"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
		        android:padding="@dimen/dimen_2_dip"
		        android:layout_alignParentTop="true"
		        android:layout_centerHorizontal="true"
	            android:textColor="#000000"
	            android:textSize="11sp"
	            />   
			<com.zhephone.hotspot.app.widget.DownloadImageView 
			    android:id="@+id/iv_userhead_right" 
		        android:layout_width="@dimen/dimen_40_dip"
		        android:layout_height="@dimen/dimen_40_dip"
		        android:focusable="false" 	
		        android:layout_marginTop="@dimen/dimen_5_dip" 
		        android:layout_below="@+id/tv_sendtime_right"	
		        android:layout_alignParentRight="true" 
		        android:layout_centerVertical="true"
		        android:src="@drawable/user_head"
		        />
			<TextView 
		        android:id="@+id/tv_username_right" 
		        android:layout_below="@+id/iv_userhead_right"	
		        android:layout_alignParentRight="true" 
		        android:layout_marginTop="@dimen/dimen_5_dip" 
		        android:layout_width="wrap_content"
		        android:visibility="gone"
		        android:layout_height="wrap_content"
		        android:textSize="9sp"
		        />  
			
			<Button 
		        android:id="@+id/bt_chatcontent_right" 
		        android:layout_below="@+id/tv_sendtime_right"	
		        android:layout_toLeftOf="@id/iv_userhead_right"
		        android:layout_marginRight="@dimen/dimen_10_dip"
		        android:layout_marginTop="@dimen/dimen_5_dip" 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/chat_bg_me" 
		        android:textSize="14sp"
		        android:gravity="center_horizontal|center_vertical"
		        android:textColor="@color/white"
		        />  


		</RelativeLayout>
	</LinearLayout>
	
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:id="@+id/chat_item_left_ll"
	    android:orientation="vertical"
		android:layout_height="wrap_content"   >
		<RelativeLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    >
			<TextView
			    android:id="@+id/tv_sendtime_left"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:padding="@dimen/dimen_2_dip"
	            android:textColor="#000000"				
	            android:textSize="11sp"
	            android:layout_centerHorizontal="true"
	            android:layout_alignParentTop="true"
		        />
			<com.zhephone.hotspot.app.widget.DownloadImageView 
			    android:id="@+id/iv_userhead_left" 
			    android:layout_width="@dimen/dimen_40_dip"
			    android:layout_height="@dimen/dimen_40_dip"
			    android:focusable="false" 
			    android:layout_centerVertical="true"
			    android:layout_below="@+id/tv_sendtime_left"
			    android:layout_alignParentLeft="true" 		
			    android:src="@drawable/user_head"
			    /> 
			<TextView 
		        android:id="@+id/tv_username_left" 
		        android:layout_below="@+id/iv_userhead_left"	
		        android:layout_alignParentLeft="true" 
		        android:layout_marginTop="@dimen/dimen_5_dip" 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="9sp"
		        android:textColor="@color/movie_title_color"
		        />  
			<Button 
		        android:id="@+id/bt_chatcontent_left" 		
		        android:layout_toRightOf="@id/iv_userhead_left"
		        android:layout_marginLeft="@dimen/dimen_10_dip"
		        android:layout_below="@+id/tv_sendtime_left"
		        android:layout_marginTop="@dimen/dimen_5_dip"
		        android:layout_width="wrap_content"
		        android:gravity="center_horizontal|center_vertical"
		       	android:layout_height="wrap_content"
		        android:background="@drawable/chat_bg_friend" 
		        android:textSize="14sp"
		        android:textColor="@color/movie_title_color"
		        />   
		</RelativeLayout>
	</LinearLayout>
</LinearLayout>