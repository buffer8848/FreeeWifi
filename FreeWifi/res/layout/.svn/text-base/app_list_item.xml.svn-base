<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_marginLeft="@dimen/dimen_10_dip"
        android:paddingRight="@dimen/dimen_10_dip"
        android:layout_width="fill_parent"
    	android:layout_height="@dimen/dimen_63_dip" 
        >
        <com.zhephone.hotspot.app.widget.DownloadImageView
            android:layout_width="@dimen/dimen_45_dip"
            android:layout_height="@dimen/dimen_45_dip" 
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:id="@+id/app_pic_iv"
            android:layout_alignParentLeft="true"
            android:src="@drawable/app_default"
            />
        <ImageView
            android:layout_width="@dimen/dimen_53_dip"
            android:layout_height="@dimen/dimen_28_dip" 
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:id="@+id/app_download_iv"
            android:layout_alignParentRight="true"
            android:src="@drawable/download_app"
            />
        <LinearLayout 
            style="@style/fill_wrap"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_toLeftOf="@+id/app_download_iv"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:layout_marginRight="@dimen/dimen_10_dip"
            android:layout_toRightOf="@+id/app_pic_iv"
            >
            <TextView
                style="@style/fill_wrap" 
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="16sp"
                android:id="@+id/app_name_tv"
                android:textColor="@color/movie_title_color"              
                />
             <TextView
                style="@style/fill_wrap" 
                android:singleLine="true"
                android:ellipsize="end" 
                android:textSize="13sp"
                android:textColor="#999999"
                android:id="@+id/app_detail_tv"          
                />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_marginLeft="@dimen/dimen_10_dip"
	    android:layout_width="fill_parent"
	    android:layout_height="0.5dip"			
	    android:background="@drawable/list_line"
	    />
</LinearLayout>