<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="@dimen/dimen_150_dip"
        android:layout_height="@dimen/dimen_85_dip"
        >
        <com.zhephone.hotspot.app.widget.DownloadImageView 
            style="@style/fill_fill"
            android:src="@drawable/default_video"
            android:scaleType="centerCrop"
            android:id="@+id/video_pic_iv"
            />
        <LinearLayout 
            android:layout_alignParentBottom="true"
            style="@style/fill_wrap"
            android:background="#7f000000"
            android:paddingLeft="@dimen/dimen_5_dip"
            android:paddingTop="@dimen/dimen_2_dip"
            android:paddingBottom="@dimen/dimen_2_dip"
            >
            <TextView
                style="@style/wrap_wrap"  
                android:textSize="11sp"
                android:singleLine="true"
                android:ellipsize="end"
	        	android:textColor="#f5f5f5"
                android:id="@+id/video_name_tv"              
                />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        style="@style/wrap_wrap"  
        android:textSize="13sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/dimen_5_dip"
        android:textColor="@color/movie_title_color"
        android:id="@+id/video_detail_tv"              
        />
</LinearLayout>