<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:orientation="vertical"
  android:background="#2a2744"
  android:layout_height="fill_parent">
  <RelativeLayout 
      android:layout_width="fill_parent"
      android:layout_height="@dimen/dimen_160_dip"
      >
      <android.support.v4.view.ViewPager
            android:id="@+id/ad_vp"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_160_dip" />
        <com.zhephone.hotspot.app.widget.IconPageIndicator
            android:id="@+id/circle_indicator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"			
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dimen_5_dip"
            android:layout_centerHorizontal="true"
            />
  </RelativeLayout> 
  <LinearLayout 
      style="@style/fill_wrap"
      android:orientation="vertical"
      android:paddingLeft="@dimen/dimen_10_dip"
      android:paddingRight="@dimen/dimen_10_dip"
      android:paddingTop="@dimen/dimen_10_dip"
      >
      <LinearLayout 
	      style="@style/fill_wrap"
	      >
	      <ImageView
	          android:layout_width="@dimen/dimen_200_dip"
	          android:layout_height="@dimen/dimen_176_dip" 
	          android:src="@drawable/main_video_selector"
	          android:id="@+id/video_iv"
	          />
	       <LinearLayout 
		      style="@style/fill_wrap"
		      android:orientation="vertical"
		      android:layout_marginLeft="@dimen/dimen_5_dip"
		      >
		      <ImageView
		          android:layout_width="@dimen/dimen_97_dip"
		          android:layout_height="@dimen/dimen_85_dip" 
		          android:src="@drawable/main_login_selector"
		          android:id="@+id/login_iv"
		          />
		      <ImageView
		          android:layout_marginTop="@dimen/dimen_6_dip"
		          android:layout_width="@dimen/dimen_97_dip"
		          android:layout_height="@dimen/dimen_85_dip" 
		          android:src="@drawable/main_chat_selector"
		          android:id="@+id/chat_iv"
		          />
		   </LinearLayout>
	  </LinearLayout>
	  <LinearLayout 
	      style="@style/fill_wrap"
	      android:layout_marginTop="@dimen/dimen_5_dip"
	      >
	      <ImageView
		      android:layout_width="@dimen/dimen_97_dip"
		      android:layout_height="@dimen/dimen_85_dip" 
		      android:src="@drawable/main_nearby_selector"
		      android:id="@+id/nearby_iv"
		      />
	      <ImageView
	          android:layout_marginLeft="@dimen/dimen_6_dip"
		      android:layout_width="@dimen/dimen_97_dip"
		      android:layout_height="@dimen/dimen_85_dip" 
		      android:src="@drawable/main_app_selector"
		      android:id="@+id/app_iv"
		      /> 
		  <ImageView
	          android:layout_marginLeft="@dimen/dimen_5_dip"
		      android:layout_width="@dimen/dimen_97_dip"
		      android:layout_height="@dimen/dimen_85_dip" 
		      android:src="@drawable/main_setting_selector"
		      android:id="@+id/setting_iv"
		      />     
	  </LinearLayout>
  </LinearLayout>
  <ImageView
      android:layout_marginTop="@dimen/dimen_5_dip"
      android:layout_width="fill_parent"
      android:layout_height="@dimen/dimen_95_dip" 
      android:src="@drawable/footer_ad"
      />
</LinearLayout>
